{
	"name": "le-cercle",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json || true",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint src/lib --ext .ts,.tsx,.js,.jsx --cache && eslint src/routes --ext .ts,.tsx,.js,.jsx --cache",
		"lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --ignore-pattern 'scripts/**' --fix",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"db:init": "node ./scripts/init-db.cjs",
		"test": "vitest",
		"test:unit": "vitest run",
		"lint:md": "markdownlint -c .markdownlint.json '**/*.md' --ignore node_modules/**",
		"prepare": "husky install"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/adapter-node": "^5.0.0",
		"@sveltejs/kit": "^2.49.4",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"@tailwindcss/postcss": "^4.0.0-alpha.1",
		"@tailwindcss/vite": "^4.1.18",
		"@types/better-sqlite3": "^7.6.9",
		"@types/node": "^25.0.9",
		"@typescript-eslint/eslint-plugin": "^8.0.0",
		"@typescript-eslint/parser": "^8.0.0",
		"autoprefixer": "^10.4.16",
		"eslint": "^9.0.0",
		"eslint-config-prettier": "^10.0.0",
		"eslint-plugin-svelte": "^3.0.0",
		"markdownlint": "^0.27.0",
		"markdownlint-cli": "^0.33.0",
		"husky": "^8.0.0",
		"lint-staged": "^13.0.0",
		"postcss": "^8.4.31",
		"prettier": "^3.0.0",
		"prettier-plugin-svelte": "^3.0.0",
		"svelte": "^5.0.0-next.1",
		"svelte-check": "^4.0.0",
		"svelte-eslint-parser": "^1.4.1",
		"tailwindcss": "^4.0.0-alpha.1",
		"typescript": "^5.0.0",
		"vite": "^7.3.1",
		"vitest": "^4.0.16"
	},
	"lint-staged": {
		"*.md": [
			"markdownlint --fix --config .markdownlint.json",
			"git add"
		]
	},
	"dependencies": {
		"@auth/core": "^0.34.0",
		"@auth/sveltekit": "^1.0.0",
		"better-sqlite3": "^12.5.0",
		"dotenv": "^17.2.3",
		"lucide-svelte": "^0.562.0",
		"svelte-adapter-bun": "^0.5.2",
		"typescript-eslint": "^8.52.0"
	}
}
