{
	"name": "le-cercle",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"files": [
		"build/",
		"src/",
		"README.md"
	],
	"engines": {
		"node": ">=18.0.0",
		"bun": "*"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint src/lib --ext .ts,.tsx,.js,.jsx --cache && eslint src/routes --ext .ts,.tsx,.js,.jsx --cache",
		"lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --ignore-pattern 'scripts/**' --fix",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"deps:install": "bun install",
		"deps:install:pnpm": "pnpm install",
		"deps:install:npm": "npm install",
		"ci:install": "bun install --production",
		"ci:build": "bun install --production && npm run build",
		"prebuild": "npm run deps:install || npm run deps:install:pnpm || npm run deps:install:npm || true",
		"start": "bun run dev",
		"package": "bun run build && bun ./scripts/pack-bun.js",
		"package:legacy": "npm run build && node -e \"require('fs').mkdirSync('build/artifacts',{ recursive: true })\" && npm pack --pack-destination build/artifacts",
		"version:show": "node -e \"console.log(require('./package.json').version)\"",
		"db:init": "node ./scripts/seed.js",
		"test": "vitest",
		"test:unit": "vitest run",
		"lint:md": "markdownlint -c .markdownlint.json '**/*.md' --ignore node_modules/**",
		"prepare": "husky install"
	},
	"devDependencies": {
		"@faker-js/faker": "^10.2.0",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/adapter-node": "^5.5.1",
		"@sveltejs/kit": "^2.49.5",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@tailwindcss/postcss": "^4.1.18",
		"@tailwindcss/vite": "^4.1.18",
		"@types/better-sqlite3": "^7.6.13",
		"@types/node": "^25.0.9",
		"@typescript-eslint/eslint-plugin": "^8.53.0",
		"@typescript-eslint/parser": "^8.53.0",
		"autoprefixer": "^10.4.23",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.14.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"markdownlint": "^0.40.0",
		"markdownlint-cli": "^0.47.0",
		"postcss": "^8.5.6",
		"prettier": "^3.8.0",
		"prettier-plugin-svelte": "^3.4.1",
		"svelte": "^5.46.4",
		"svelte-check": "^4.3.5",
		"svelte-eslint-parser": "^1.4.1",
		"tailwindcss": "^4.1.18",
		"typescript": "^5.9.3",
		"vite": "^7.3.1",
		"vitest": "^4.0.17"
	},
	"lint-staged": {
		"*.md": [
			"markdownlint --fix --config .markdownlint.json",
			"git add"
		]
	},
	"dependencies": {
		"@auth/core": "^0.34.3",
		"@auth/sveltekit": "^1.11.1",
		"better-sqlite3": "^12.6.0",
		"dotenv": "^17.2.3",
		"lucide-svelte": "^0.563.0",
		"svelte-adapter-bun": "^1.0.1",
		"typescript-eslint": "^8.53.0"
	}
}
